    <h1><center> Student Questionnaire </center></h1>
    <h3> Please answer the following questions </h3>
    <ul>
      <li>Please state your name</li>
      <li>Where are you from?</li>
      <li>What is your favorite flavor of ice cream?</li>
      <li>What is your favorite season?</li>
    </ul>
    <script>
    
      var Name = prompt ('Please state your name')
      console.log('name', Name);

      if (Name) {
        alert ('Welcome'+' '+Name)
        console.log('true', Name);
      }

      var From = prompt ('Where do you live?')
      console.log('region', From);
      if (From) {
        alert ('Wow! Living in '+From+' '+'is so cool '+Name+'.')
        console.log('true', From);
      }

      var IceCream = prompt ('What is your favorite flavor of ice cream?')
      console.log('flavor', IceCream);
      if (IceCream === 'Cookies & Cream') {
        alert ('Thats my favorite too '+Name+'!')
        console.log('true', IceCream);
      } else {
        alert ('Mmmm, thats a yummy flavor '+Name+'.')
        console.log('false', IceCream);
      }

      var Season = prompt ('What is your favorite season?')
      console.log('season', Season);
      if (Season) {
        alert ('Thats a great season '+Name+'! The weather in '+From+' must be great for '+IceCream+' flavor ice cream during the '+Season+'.')
        console.log('true', Season);
      }

    </script>
